<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:actionMenuTextColor">@color/inactiveLink</item>-->
        <!--<item name="android:itemTextAppearance">@style/MenuItemTextAppearance</item>--> <!--works-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/runningmansplash</item>
    </style>


    <!--<style name="MenuItemTextAppearance">
        <item name="android:textColor">#757575</item>
    </style>-->

    <style name="PopupMenu">
        <item name="android:itemBackground">#4D4D4D</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#757575</item>
        <!--<item name="android:width">800dp</item>-->
        <!--<item name="android:colorBackground">#757575</item>-->
        <!--<item name="android:dividerHeight">1dp</item>-->
    </style>

    <style name="ShowcaseStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
